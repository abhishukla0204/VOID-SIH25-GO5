# React Frontend Environment Configuration Template
# =================================================
# Copy this file to .env and update the values for your deployment

# API Configuration - Update with your deployment URLs
VITE_API_BASE_URL=https://your-backend-domain.com
VITE_WS_BASE_URL=wss://your-backend-domain.com

# Application Settings
VITE_APP_TITLE=Rockfall Detection System
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=production

# Feature Flags
VITE_ENABLE_LIVE_MONITORING=true
VITE_ENABLE_DEM_ANALYSIS=true
VITE_ENABLE_RISK_ASSESSMENT=true
VITE_ENABLE_DEBUG_MODE=false

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true
VITE_AUTO_REFRESH_INTERVAL=5000

# Camera Configuration
VITE_CAMERA_REFRESH_RATE=30
VITE_ENABLE_CAMERA_CONTROLS=true
VITE_MAX_CAMERA_RESOLUTION=1920x1080

# Maps and External APIs (optional)
VITE_MAPBOX_TOKEN=your-mapbox-token-here
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-key-here

# Development Settings
VITE_ENABLE_MOCK_DATA=false
VITE_API_TIMEOUT=30000
VITE_DEBUG_WEBSOCKET=false

# Development Configuration Example:
# For local development, use:
# VITE_API_BASE_URL=http://localhost:8000
# VITE_WS_BASE_URL=ws://localhost:8000
# VITE_ENVIRONMENT=development
# VITE_ENABLE_DEBUG_MODE=true
